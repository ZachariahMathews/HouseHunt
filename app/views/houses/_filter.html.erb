<%= form_tag houses_path, :method => 'get' do %>
  <p>
    <%= label_tag :location, "Location:" %>
    <%= text_field_tag :location, params[:location] %>
    <%= label_tag :start_price, "Starting Price:" %>
    <%= number_field_tag :start_price, params[:start_price] %>
    <%= label_tag :end_price, "Ending Price:" %>
    <%= number_field_tag :end_price, params[:end_price] %>
    <%= label_tag :start_area, "Starting Area:" %>
    <%= number_field_tag :start_area, params[:start_area] %>
    <%= label_tag :end_area, "Ending Area:" %>
    <%= number_field_tag :end_area, params[:end_area] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>