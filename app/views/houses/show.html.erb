<p id="notice"><%= notice %></p>

<% @house.images.each do |image| %>
  <%= image_tag image, width: '200px' %>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @house.name %>
</p>
<p>
  <strong>Real estate company:</strong>
  <%= @house.real_estate_company.name %>
</p>

<p>
  <strong>Realtor :</strong>
  <%= @house.user.name %>
</p>

<p>
  <strong>House style:</strong>
  <%= @house.house_style.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @house.location %>
</p>

<p>
  <strong>Sq ft:</strong>
  <%= @house.sq_ft %>
</p>

<p>
  <strong>Year:</strong>
  <%= @house.year %>
</p>

<p>
  <strong>Price:</strong>
  <%= @house.price %>
</p>

<p>
  <strong>Floors:</strong>
  <%= @house.floors %>
</p>

<p>
  <strong>Basement:</strong>
  <%= @house.basement %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @house.owner %>
</p>

<p>
  <strong>Contact:</strong>
  <%= @house.contact %>
</p>
<% if !house_hunter? && current_user.id == @house.user_id %>
<p>
  <strong>Potential buyers:</strong>
  <%= "**need to display**" %>
</p>
<% end %>
<% if house_hunter? %>
  <p>
    <strong>Interested:</strong>
    <%= "**need to display**" %>
  </p>

  <br><h2>Inquiries</h2><br>
  <% @inquiries.each do |inquiry|  %>
    <p>
      <strong>Subject: </strong>
      <%= inquiry.subject %>
    </p>
    <p>
      <strong>Message: </strong>
      <%= inquiry.msg %>
    </p>
    <% if !inquiry.reply.nil? && !inquiry.reply.empty?  %>
      <p>
        <strong>Reply: </strong>
        <%= inquiry.reply %>
      </p>
    <% else %>
      <p><i>A realtor is yet to reply to this inquiry.</i></p>
    <% end %>
  <% end %>
  <br><h4>Add new Inquiry</h4><br>
  <%= render 'inquiry_form', inquiry: Inquiry.new %>
<% end %>

<% if admin? || (current_user.id == @house.user_id)%>
<%= link_to 'Edit', edit_house_path(@house) %> |
<% end %>
<%= link_to 'Back', :back %>
