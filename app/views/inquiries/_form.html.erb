<div class="form-row">
  <div class="form-group col-md-12">
    <label>House:</label>
    <input class="form-control" type="text" value="<%= @house.name %>" disabled>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-12">
    <label>Subject:</label>
    <input class="form-control" type="text" value="<%= inquiry.subject %>" disabled>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-12">
    <label>Message:</label>
    <textarea class="form-control" value="" disabled><%= inquiry.msg %></textarea>
  </div>
</div>

<%= form_with(model: inquiry, local: true) do |form| %>
  <% if inquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
      <% inquiry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :reply %>
      <%= form.text_area :reply, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-danger' %>
  </div>
<% end %>
