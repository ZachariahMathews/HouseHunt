<p id="notice"><%= notice %></p>

<h1>Inquiries</h1>

<br>

<h4>Pending Inquiries</h4>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>House</th>
      <th>Subject</th>
      <th>Msg</th>
      <th>Time</th>
      <th colspan="2"></th>
      <% if admin? %><th></th><% end %>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <% if inquiry.reply.nil? || inquiry.reply.empty? %>
        <tr>
          <td><%= inquiry.user.name %></td>
          <td><%= inquiry.house.name %></td>
          <td><%= inquiry.subject %></td>
          <td><%= inquiry.msg %></td>
          <td><%= inquiry.created_at %></td>
          <td><%= link_to 'Show', inquiry %></td>
          <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
          <% if admin? %><td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td> <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<h4 >Resolved Inquiries</h4>
<table>
  <thead>
  <tr>
    <th>User</th>
    <th>House</th>
    <th>Subject</th>
    <th>Message</th>
    <th>Reply</th>
    <th>Time</th>
    <% if admin? %>
      <th colspan="3"></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @inquiries.each do |inquiry| %>
    <% if !inquiry.reply.nil? && !inquiry.reply.empty? %>
      <tr>
        <td><%= inquiry.user.name %></td>
        <td><%= inquiry.house.name %></td>
        <td><%= inquiry.subject %></td>
        <td><%= inquiry.msg %></td>
        <td><%= inquiry.reply %></td>
        <td><%= inquiry.created_at %></td>
        <% if admin? %>
          <td><%= link_to 'Show', inquiry %></td>
          <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
          <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

