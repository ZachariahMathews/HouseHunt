<p id="notice"><%= notice %></p>

<h1>Inquiries</h1>

<br>

<h4>Pending Inquiries</h4>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th width="20%">User</th>
      <th width="20%">House</th>
      <th width="20%">Subject</th>
      <th width="20%">Time</th>
      <th colspan="2" width="7%"></th>
      <% if admin? %><th width="13%"></th><% end %>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <% if inquiry.reply.nil? || inquiry.reply.empty? %>
        <tr>
          <td><%= inquiry.user.name %></td>
          <td><%= inquiry.house.name %></td>
          <td><%= inquiry.subject %></td>
          <td><%= inquiry.created_at %></td>
          <td><%= link_to 'Show', inquiry %></td>
          <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
          <% if admin? %><td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td> <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<h4 >Resolved Inquiries</h4>
<table class="table">
  <thead class="thead-light">
  <tr>
    <th width="20%">User</thwidth>
    <th width="20%">House</th>
    <th width="20%">Subject</th>
    <th width="20%">Time</th>
    <th width="7%"></th>
    <% if admin? %>
      <th colspan="3" width="13%"></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @inquiries.each do |inquiry| %>
    <% if !inquiry.reply.nil? && !inquiry.reply.empty? %>
      <tr>
        <td><%= inquiry.user.name %></td>
        <td><%= inquiry.house.name %></td>
        <td><%= inquiry.subject %></td>
        <td><%= inquiry.created_at %></td>
        <td><%= link_to 'Show', inquiry %></td>
        <% if admin? %>
          <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
          <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<div class="list-group mx-auto" style="width: 200px; text-align: center">
  <% if admin? %>
    <%= link_to 'New Inquiry', new_inquiry_path, class: 'list-group-item list-group-item-action' %> |
  <% end %>
  <%= link_to 'Back', welcome_index_path, class: 'list-group-item list-group-item-action' %>
</div>