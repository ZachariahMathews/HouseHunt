<span style="font-size: 40pt;"><%= @inquiry.house.name %></span>
<br><br>

<div class="card" style="width: 30rem;">
  <ul class="list-group list-group-flush">
    <div class="list-group list-group-flush" style="background: #cc0000;height: 3px"></div>

    <li class="list-group-item pl-4">
      <div class="d-flex flex-row">
        <div class="p-2" style="color: #cc0000"><i class="material-icons mr-1" style="vertical-align: bottom;font-size: 24px;">person</i></div>
        <div class="p-2">
          <div class="row">
            <span class="text-uppercase font-weight-bold" style="color: #cc0000">house hunter</span>
          </div>
          <div class="row">
            <span><%= @inquiry.user.name %></span>
          </div>
        </div>
      </div>
    </li>

    <li class="list-group-item pl-4">
      <div class="d-flex flex-row">
        <div class="p-2" style="color: #cc0000"><i class="material-icons mr-1" style="vertical-align: bottom;font-size: 24px;">call</i></div>
        <div class="p-2">
          <div class="row">
            <span class="text-uppercase font-weight-bold" style="color: #cc0000" style="color: #cc0000">subject</span>
          </div>
          <div class="row">
            <span><%= @inquiry.subject %></span>
          </div>
        </div>
      </div>
    </li>

    <li class="list-group-item pl-4">
      <div class="d-flex flex-row">
        <div class="p-2" style="color: #cc0000"><i class="material-icons mr-1" style="vertical-align: bottom;font-size: 24px;">message</i></div>
        <div class="p-2">
          <div class="row">
            <span class="text-uppercase font-weight-bold" style="color: #cc0000">message</span>
          </div>
          <div class="row">
            <span><%= @inquiry.msg %></span>
          </div>
        </div>
      </div>
    </li>

    <% if !@inquiry.reply.nil? && !@inquiry.reply.empty?%>
      <li class="list-group-item pl-4">
        <div class="d-flex flex-row">
          <div class="p-2" style="color: #cc0000"><i class="material-icons mr-1" style="vertical-align: bottom;font-size: 24px;">reply</i></div>
          <div class="p-2">
            <div class="row">
              <span class="text-uppercase font-weight-bold" style="color: #cc0000">reply</span>
            </div>
            <div class="row">
              <span><%= @inquiry.reply %></span>
            </div>
          </div>
        </div>
      </li>
    <% end %>

    <div class="list-group list-group-flush" style="background: #cc0000;height: 3px"></div>
  </ul>
</div>

<% if !notice.nil? %>
  <br>
  <div class="row">
    <div class="alert alert-success" role="alert">
      <i class="material-icons mr-3" style="vertical-align: bottom;font-size: 24px;">check_circle</i><%= notice %>
      <button type="button" class="close ml-3" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>
<br>

<div class="d-flex flex-row" style="width: 250px; text-align: center">
  <div class="p-2" style="width: 73px">
    <%= link_to inquiries_path, class: 'list-group-item list-group-item-danger list-group-item-action' do %>
      <i class="material-icons mr-3" style="vertical-align: bottom;font-size: 24px;">arrow_back_ios</i>
    <% end %>
  </div>
  <% if admin? || @inquiry.reply.nil? || @inquiry.reply.empty? %>
    <div class="p-2" style="width: 80px" data-toggle="tooltip" title="Reply" data-placement="bottom">
      <%= link_to edit_inquiry_path(@inquiry), class: 'list-group-item list-group-item-danger   list-group-item-action' do %>
        <i class="material-icons mr-3" style="vertical-align: bottom;font-size: 24px;">reply</i>
      <% end %>
    </div>
  <% end %>
</div>

