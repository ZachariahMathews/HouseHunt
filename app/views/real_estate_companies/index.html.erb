<i class="material-icons mr-1" style="vertical-align: bottom;font-size: 48px;">business</i>
<span style="font-size: xx-large">Real Estate Companies</span>
<br><br>

<table class="table">
  <thead class="table-danger">
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Address</th>
      <th>Size</th>
      <th>Founded</th>
      <th>Revenue</th>
      <th>Synopsis</th>
      <% if !house_hunter? %><th></th><% end %>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @real_estate_companies.each do |real_estate_company| %>
      <tr>
        <td><%= real_estate_company.name %></td>
        <td><%= real_estate_company.website %></td>
        <td><%= real_estate_company.address %></td>
        <td><%= real_estate_company.size %></td>
        <td><%= real_estate_company.founded %></td>
        <td><%= real_estate_company.revenue %></td>
        <td><%= real_estate_company.synopsis %></td>
        <td>
          <%= link_to real_estate_company do%>
            <i class="material-icons mr-3" style="vertical-align: bottom;font-size: 24px; color: #de6868">remove_red_eye</i>
          <% end %>
        </td>
        <% if !house_hunter? and !realtor? %>
          <td>
            <%= link_to real_estate_company, method: :delete, data: { confirm: 'Are you sure?' } do%>
              <i class="material-icons mr-3" style="vertical-align: bottom;font-size: 24px; color: #de6868">delete</i>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex flex-row" style="width: 250px; text-align: center">
  <div class="p-2" style="width: 73px">
    <%= link_to welcome_index_path, class: 'list-group-item list-group-item-danger list-group-item-action' do %>
      <i class="material-icons mr-3" style="vertical-align: bottom;font-size: 24px;">arrow_back_ios</i>
    <% end %>
  </div>
  <% if !house_hunter? %>
    <div class="p-2" style="width: 80px" data-toggle="tooltip" title="Reply" data-placement="bottom">
      <%= link_to new_real_estate_company_path, class: 'list-group-item list-group-item-danger   list-group-item-action' do %>
        <i class="material-icons mr-3" style="vertical-align: bottom;font-size: 24px;">add</i>
      <% end %>
    </div>
  <% end %>
</div>