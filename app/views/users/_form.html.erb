<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <br>
    <div style="margin-top: -25px">
      <div class="alert alert-danger" role="alert" style="padding-bottom: 20px;">
        <p><i class="material-icons mr-3" style="vertical-align: bottom;font-size: 24px;">warning</i>
          <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
          <button type="button" class="close ml-3" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </p>

        <ul class="list-group">
          <% user.errors.full_messages.each do |message| %>
            <li class="list-group-item list-group-item-danger"><%= message %></li>
          <% end %>
        </ul>

      </div>
    </div>
    <br>
  <% end %>

  <div class="form-row" align="left">
    <div class="form-group col-md-6">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row" align="left">
    <div class="form-group col-md-6">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row" align="left">
    <div class="form-group col-md-6">
      <%= form.label :phone %>
      <%= form.text_field :phone, class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :preferred_contact_method %>
      <%= form.text_field :preferred_contact_method, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row" align="left">
    <div class="form-check col-md-6">
      <%= form.check_box :is_realtor, class: 'form-control form-check-input' %>
      <%= form.label :is_realtor, class: 'form-check-label' %>
    </div>
    <div class="form-group col-md-6">
      <%= form.check_box :is_house_hunter, class: 'form-control form-check-input' %>
      <%= form.label :is_house_hunter, class: 'form-check-label' %>
    </div>
  </div>

  <div class="form-row" align="left">
    <div class="form-group col-md-3">
      <%= form.label :real_estate_company, class: 'col-form-label'%>
    </div>
    <div class="form-group col-md-4">
      <%= form.collection_select(:real_estate_company_id, @real_estate_companies, :id, :name, {}, {class: 'form-control'}) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit logged_in? ? 'Save' : 'Sign up!', class: "btn btn-danger" %>
  </div>
<% end %>
